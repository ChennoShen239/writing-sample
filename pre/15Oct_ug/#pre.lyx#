\begin_deeper
\begin_layout Standard

\series bold
AR(1) Endowment:
\series default

\begin_inset Formula 
\[
\ln y'=(1-\rho_{y})\mu_{y}+\rho_{y}\ln y+\sigma_{y}\varepsilon'
\]

\end_inset


\end_layout

\begin_layout Standard

\series bold
Debt Setup:

\series default
 long-term bond with coupon 
\begin_inset Formula $\kappa$
\end_inset

,
 decay 
\begin_inset Formula $\delta$
\end_inset

,
 risk-free rate 
\begin_inset Formula $r$
\end_inset


\end_layout

\begin_layout Standard

\series bold
Consequences of Default:
\end_layout

\begin_layout Enumerate
Excluded to autarky with prob.
 
\begin_inset Formula $\ensuremath{1-\gamma}$
\end_inset


\end_layout

\begin_layout Enumerate
Output cost 
\begin_inset Formula $h(y)=y-\max\{0,\lambda_{0}y+\lambda_{1}y^{2}\}$
\end_inset


\end_layout

\begin_layout Standard

\series bold
Preferences:
\begin_inset Formula 
\[
\max\sum_{t=0}^{\infty}\beta^{t}u\left(c_{t}\right)
\]

\end_inset


\series default
with 
\begin_inset Formula $u(c)=(c^{1-\sigma}-1)/(1-\sigma)$
\end_inset


\end_layout

